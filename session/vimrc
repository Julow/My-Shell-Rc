" Vim config

execute pathogen#infect()

set encoding=utf8
set ignorecase
set hlsearch
set showmatch

set noswapfile

set wildmenu

set mouse=a

syntax enable

filetype plugin on
filetype indent on

set backspace=eol,start,indent

set autoread

set t_Co=16

set diffopt+=foldcolumn:0

" Indent
set smarttab
set shiftwidth=4
set tabstop=4
set ai
set si
set noexpandtab

set wrap

" Formatting
set formatoptions+=roj

" Fold
set foldenable
set foldmethod=indent
set foldlevelstart=99
nnoremap <space> za

" Double escape to clear highlight
" A custom event is used to allow extensibility
nnoremap <esc><esc> :doautocmd User ClearHighlight<return>
autocmd User ClearHighlight call feedkeys("\<esc>:nohlsearch\<return>")

" Scroll
set scrolloff=10

" Remap # to search for the current word and to search forward
" Use the selection in visual mode
nnoremap # "vyiwge/\<\V<C-R>v\><return>
vnoremap # "vyge/\V<C-R>v<return>

" Repeat substitution and search
nnoremap & n&
" Substitution from selection
vnoremap & "vy:s/<C-R>v/

" Use system clipboard
set clipboard=unnamedplus

" Set window title
set t_ts=]2;
set t_fs=\\
autocmd BufEnter * let &titlestring = expand("%:t")
set title

" Per project vimrc
set exrc
set secure

" Color adjustments
hi Folded ctermbg=none ctermfg=blue

hi DiffAdd ctermbg=lightgrey ctermfg=none
hi DiffDelete ctermbg=lightgrey ctermfg=lightgrey
hi DiffChange ctermbg=15 ctermfg=none
hi DiffText ctermbg=7 ctermfg=none
